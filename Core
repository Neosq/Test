-- Core.lua (minimal debug version â€“ replace your current one)

print("[Core] Starting execution")

local UI_LIBRARY_URL = "https://raw.githubusercontent.com/orialdev/WindUI-Forked-by-orialdev/refs/heads/main/WindUI%20Forked"

print("[Core] Fetching WindUI...")
local WindUI = loadstring(game:HttpGet(UI_LIBRARY_URL, true))()
if not WindUI then
    warn("[Core] WindUI load failed!")
    return nil
end
print("[Core] WindUI loaded OK")

print("[Core] Creating minimal window...")
local Win = WindUI:CreateWindow({
    Title = "Just A Hub (DEBUG)",
    Size = UDim2.fromOffset(600, 480),
    Theme = "Dark",
    Resizable = true
})
print("[Core] Window created OK")

-- Minimal hub table
local hub = {
    Win = Win,
    Notify = function(self, title, content, icon, duration)
        Win:Notify({
            Title = title or "Info",
            Content = content or "",
            Icon = icon or "info",
            Duration = duration or 4
        })
    end
}

print("[Core] Hub ready - returning")
return Win, hub
